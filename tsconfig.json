{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ncats-frontend-library/firebase-auth": [
        "libs/firebase-auth/src/index.ts"
      ],
      "@ncats-frontend-library/ncats-material-module": [
        "libs/ncats-material-module/src/index.ts"
      ],
      "@ncats-frontend-library/ncats-firebase-auth-module": [
        "libs/ncats-firebase-auth-module/src/index.ts"
      ],
      "@ncats-frontend-library/idg-tdl-indicator": [
        "libs/idg-tdl-indicator/src/index.ts"
      ],
      "@ncats-frontend-library/facet-sidepanel": [
        "libs/facet-sidepanel/src/index.ts"
      ],
      "@ncats-frontend-library/dynamic-app": ["libs/dynamic-app/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
